{
	"arrowParens": "always",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "css",
	"jsxSingleQuote": false,
	"plugins": [],
	"printWidth": 80,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": true,
	"singleAttributePerLine": true,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": "*.css",
			"options": {
				"parser": "css",
				"printWidth": 60
			}
		},
		{
			"files": "*.user.css",
			"options": {
				"parser": "css"
			}
		},
		{
			"files": "*.styl",
			"options": {
				"parser": "stylus"
			}
		},
		{
			"files": "*.html",
			"options": {
				"printWidth": 120
			}
		},
		{
			"files": "*.user.js",
			"options": {
				"printWidth": 160
			}
		}
	]
}
